#include "main.h"

/**
 *
 * print_S - prints string
 * Non printable characters printed \x
 * @l: va_list arguement
 * @f: pointer
 *
 * Return: number of printed chars
 */

int print_S(va_list 1, flags_t *f)
{
	int x, count = 0;
	char *res;
	char *s = va_arg(1, char *);

	(void)f;
	if (!s)
		return (_puts("(null)"));

	for (x = 0; s[x]; x++)
	{
		if (s[x] > 0 && (s[x] < 32 || s[x] >= 127))
		{
			_puts("\\x");
			count += 2;
			res = convert(s[x], 16, 0);
			if (!res[1])
				count += _putchar('0');
			count += _puts(res);
		}
		else
			count += _putchar(s[x]);
	}
	return (count);
}
